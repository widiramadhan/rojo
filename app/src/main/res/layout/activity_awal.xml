<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/layoutViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/vPager"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                />

        <LinearLayout
            android:id="@+id/menuatas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="-15dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_weight="0.25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F8F8F8"
                        android:drawableTop="@drawable/ic_flightout"
                        android:text="Pesawat"
                        android:textColor="#000"
                        android:id="@+id/btn_pesawat"
                        android:textSize="12dp"
                        android:textAllCaps="false"
                        android:paddingBottom="15dp"
                        android:paddingTop="8dp"/>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F8F8F8"
                        android:drawableTop="@drawable/ic_krt"
                        android:text="Kereta"
                        android:id="@+id/btn_kereta"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:textAllCaps="false"
                        android:paddingBottom="15dp"
                        android:paddingTop="8dp"/>

                </android.support.v7.widget.CardView>
            </LinearLayout>




        </LinearLayout>

            <LinearLayout
                android:id="@+id/menubawah"
                android:layout_below="@id/menuatas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_weight="0.25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp">


                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true"
                        >

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F8F8F8"
                            android:drawableTop="@drawable/ic_wisata"
                            android:text="Wisata"
                            android:id="@+id/btn_wisata"
                            android:textSize="12dp"
                            android:textAllCaps="false"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"/>

                    </android.support.v7.widget.CardView>
                </LinearLayout>




                <LinearLayout
                    android:layout_weight="0.25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true"
                        >

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F8F8F8"
                            android:drawableTop="@drawable/ic_rental"
                            android:text="Rental Mobil"
                            android:id="@+id/btn_mobil"
                            android:textSize="12dp"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/layoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECOMENDED"
                    android:textSize="18dp"
                    android:textColor="@color/textgreen"
                    android:id="@+id/recomended"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" TOUR"
                    android:textSize="18dp"
                    android:textColor="@color/textblue"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/recomended"/>

                <!--<TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More.."
                    android:layout_alignParentRight="true"
                    android:gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:textColor="#68c3d6"
                    android:textSize="15sp" />-->
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"/>

            <RelativeLayout
                android:id="@+id/layoutText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CITY"
                    android:textSize="18dp"
                    android:textColor="@color/textgreen"
                    android:id="@+id/city"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" TOUR"
                    android:textSize="18dp"
                    android:textColor="@color/textblue"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/city"/>

                <!--<TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More.."
                    android:layout_alignParentRight="true"
                    android:gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:textColor="#68c3d6"
                    android:textSize="15sp" />-->
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Find us"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivInstagram"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/instagram"
                    android:padding="2dp"/>

                <ImageView
                    android:id="@+id/ivFacebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/facebook"
                    android:padding="2dp"/>

                <ImageView
                    android:id="@+id/ivTwitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/twitter"
                    android:padding="2dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/crown"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>