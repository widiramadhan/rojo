<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textSize="20dp"
                android:textColor="@color/textgreen"
                android:id="@+id/cari"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" PROFILE"
                android:textSize="20dp"
                android:textColor="@color/textblue"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/cari"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/nama"
                        android:textColor="@color/blacktext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama"/>

                    <TextView
                        android:id="@+id/isinama"
                        android:layout_below="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kang Yasin"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/email"
                        android:textColor="@color/blacktext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"/>

                    <TextView
                        android:id="@+id/isiemail"
                        android:layout_below="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kang Yasin"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/negara"
                        android:textColor="@color/blacktext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indonesia"/>

                    <TextView
                        android:id="@+id/isinegara"
                        android:layout_below="@+id/negara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kang Yasin"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/telp"
                        android:textColor="@color/blacktext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telp/Hp"/>

                    <TextView
                        android:id="@+id/isitelp"
                        android:layout_below="@+id/telp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0818718718111"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/alamat"
                        android:textColor="@color/blacktext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat"/>

                    <TextView
                        android:id="@+id/isialamat"
                        android:layout_below="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="jl. panjang no. 100"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/submiton"
                    android:layout_below="@id/password"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded"
                    android:text="Logout" />
            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>